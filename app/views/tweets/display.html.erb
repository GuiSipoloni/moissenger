<meta http-equiv="refresh" content="600" />
<link rel="stylesheet" type="text/css" href="/slick/slick.css"/>
<link rel="stylesheet" type="text/css" href="/slick/slick-theme.css"/>

<div class="slider autoplay">
<% @tweet.each do |t| %>
  <article class="tweet" style="height: 450px">
    <div class="title">
      <h2><%= t.tweet %></h2>
    </div>
    <div class="meta" style="position: absolute; bottom: 10px;">
      <time class="published" style="align-content: "><%= t.created_at.strftime("Enviado no dia %m/%d/%Y as %Hh%M") %></time>
      <a href="#" class="author">
        <span class="name">
          <%= t.user_id.present? ? t.user.name : "Sem user no banco de dados" %>
        </span>
        <img src="/images/Asset1.png" alt="Logo do Moissenger" class="small-user-img" style="left: 10px;"/>
      </a>
    </div>
  </article>
<% end %>
<% if @tweet.blank? %>
  <p>Nenhum tweet foi enviado ainda :(</p>
<% end %>
</div>

  <script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
  <script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
  <script type="text/javascript" src="/slick/slick.min.js"></script>

  <script type="text/javascript">
    $(document).ready(function(){
      $('.autoplay').slick({
        slidesToShow: 1,
        slidesToScroll: 1,
        autoplay: true,
        autoplaySpeed: 10000,
        adaptiveHeight: true,
        infinite: true,
        slidesPerRow: 1
      });
        
    });
  </script>

