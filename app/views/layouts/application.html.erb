<!DOCTYPE html>
<html>
  <head>
    <title>Moissenger</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <!-- Wrapper -->
    <div id="wrapper">

      <!-- Header -->
      <header id="header">
        <%= link_to root_path do %>
          <img src="/images/Asset2.png" alt="Logo" height="42px" style="margin-top: 5px; margin-left: 10px;" />
        <% end %>
        <nav class="links">
          <ul>
            <li><%= link_to fa_icon("commenting", text: "Nova Mensagem"), new_tweet_path %></li>
            <li><%= link_to fa_icon("users", text: "Listar usuÃ¡rios"), users_path %></li>
            <% if current_user.present? && current_user.id.present? %>
              <li><%= link_to fa_icon("user-circle", text: "Editar Perfil"), edit_user_path(current_user.id) %></li>
            <% end %>
          </ul>
        </nav>
        <nav class="main">
          <ul>
            <li class="search">
              <a class="fa-search" href="#search"></a>
              <form id="search" method="get" action="#">
                <input type="text" name="query" placeholder="Search" />
              </form>
            </li>
            <li class="logout">
              <%= link_to fa_icon("sign-out", text: "Logout"), destroy_user_session_path, class: "logout" %>
            </li>
          </ul>
        </nav>
      </header>

      <% if flash[:error] %>
        <div class="alert alert-error" id="error"> <%= flash[:error] %></div>
      <% end %>

      <% if flash[:notice] %>
        <div class="alert alert-success" id="notice"> <%= flash[:notice] %></div>
      <% end %>

      <!-- Main -->
      <div id="main">
        <%= yield %>
      </div>
    </div>

  </body>
</html>
